<h2>カテゴリ管理</h2>

  <h3>カテゴリ新規登録</h3>
  <%= form_with model: @category, url: categories_path, local: true do |f| %>
    <%= f.label :name, "カテゴリ名:" %>
    <%= f.text_field :name %>
    <%= f.submit "追加" %>
  <% end %>

  <table class="table table-hover table-inverse">
    <thead>
      <tr>
        <th>カテゴリ一覧</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <tbody>
        <% @categories.each do |category| %>
        <tr>
          <td><%= category.name %></td>
          <td><%= link_to "編集する", edit_category_path(category) %></td>
        </tr>
        <% end %>
      </tbody>
    </tbody>
  </table>