<% if user_signed_in? %>
  <% if item.favorited_by?(current_user) %>
    お気に入り解除：<%= link_to item_favorites_path(item), method: :delete, remote: true do %>
    <span class="fas fa-bookmark" aria-hidden="true"></span>
    <% end %>
  <% else %>
    お気に入り登録：<%= link_to item_favorites_path(item), method: :post, remote: true do %>
    <span class="far fa-bookmark" aria-hidden="true"></span>
    <% end %>
  <% end %>
<% end %>