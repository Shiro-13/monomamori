<!--#favorite{ id: @item.id }-->
 <!--お気に入り未登録の時-->
  <% if !Favorite.exists?(user: current_user, item_id: @item.id) %>
    <%= link_to item_favorites_path(@item), method: :post, remote: true, class: "favorite-btn favorite-item" do %>
    <i class="fas fa-star star-icon1"></i>
    <% end %>
    <span class="star-count1">ブックマーク</span>
  <!--お気に入り登録済みの時-->
  <% else %>
    <%= link_to item_favorites_path(@item), method: :delete, remote: true, class: "favorite-btn favorite-delete" do %>
    <i class="fas fa-star star-icon1"></i>
    <% end %>
    <span class="star-count1">ブックマーク</span>
  <% end %>