<!DOCTYPE html>
<html>
  <head>
    <title>Monomamori</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header class="navbar nav_container">
      <div class="container">
        <div class="logo">
          <%= link_to root_path, class: "site-logo" do %>
            <%= image_tag "MONOMAMORI.svg" %>
          <% end %>
        </div>
        <ul class="nav justify-content-end">
          <% if user_signed_in? %>
            <li class="nav-item nav_list_item"><%= link_to "Home", root_path, class: "nav-link" %></li>
            <li class="nav-item nav_list_item"><%= link_to "備品一覧", items_path, class: "nav-link" %></li>
            <li class="nav-item nav_list_item"><%= link_to "利用履歴一覧", rentals_path, class: "nav-link" %></li>
            <li class="nav-item nav_list_item"><%= link_to "マイページ", user_path(current_user.id), class: "nav-link" %></li>
            <li class="nav-item nav_list_item"><%= link_to "サインアウト", destroy_user_session_path, :method => :delete, class: "nav-link" %></li>
          <% else %>
            <li class="nav-item nav_list_item"><%= link_to "Home", root_path, class: "nav-link" %></li>
            <li class="nav-item nav_list_item"><%= link_to "About", about_path, class: "nav-link" %></li>
            <li class="nav-item nav_list_item"><%= link_to "新規登録", new_user_registration_path, class: "nav-link" %></li>
            <li class="nav-item nav_list_item"><%= link_to "ログイン", new_user_session_path, class: "nav-link" %></li>
          <% end %>
        </ul>
        <div class="header-nav-item">
          <%= form_tag(search_path, method: :get) do %>
            <%= text_field_tag :search, params[:search], placeholder: "何かお探しですか？", class: "form2-input" %>
            <%= submit_tag "  検索  ", class: "btn btn_navy btn-sm " %>
          <% end %>
        </div>
      </div>
    </header>

    <main>
      <div class="container">
        <%= yield %>
      <div>
    </main>
    <footer>
      <div class="container">
        <p>&copy; All rights reserved by monomamori</p>
      </div>
    </footer>

  </body>
</html>
