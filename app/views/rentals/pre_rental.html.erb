<h2><%= @item.name %>（備品名称）の貸出</h2>

<!--貸出備品情報-->
<h3>【貸出備品情報】</h3>
<h4>名前&emsp;<%= @item.name %></h4>
<h4>保管場所&emsp;<%= @item.place %></h4>

<hr>

<h3>【レンタルユーザー情報】</h3>
<h4>所属&emsp;<%= @user.department %></h4>
<h4>利用者氏名&emsp;<%= @user.name %></h4>

<hr>

<%= form_with model: @rental, url: rentals_path, local: true do |f| %>
  <%= f.label :貸出日 %>
  <%= f.date_field :rental_date, class: 'form-control' %><br>
  <%= f.label :返却予定日 %>
  <%= f.date_field :return_date, class: 'form-control' %><br>
  <%= f.submit "貸出", id: "rental_button" %>
<% end %>