<h2><%= @rental.item.name %>の貸出</h2>

<!--貸出備品情報-->
<h3>【貸出備品情報】</h3>
<h4>名前&emsp;<%= @rental.item.name %></h4>
<h4>保管場所&emsp;<%= @rental.item.place %></h4>

<hr>

<h3>【レンタルユーザー情報】</h3>
<h4>所属&emsp;<%= @user.department %></h4>
<h4>利用者氏名&emsp;<%= @user.name %></h4>
<!--< end %>-->
<hr>

<%#= form_with model: @rental, url: confirm_path, local: true do |f| %>
<%= form_with(model: @rental, local: true, url: "/rentals/#{@rental.id}/confirm") do |f| %>
  <%= f.label :貸出日 %>
  <%= f.date_field :rental_date, include_blank: true %><br>
  <%= f.label :返却予定日 %>
  <%= f.date_field :return_date, include_blank: true %><br>
  <%= f.hidden_field :item_id, value: @rental.item.id %>
  <%= f.submit "貸出", id: "rental_button" %>
<% end %>