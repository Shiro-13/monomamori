<h2 class="page_title col-lg-4 offset-lg-4">備品一覧</h2>
<a>カテゴリ選択</a>
<div class="button-group">

  <div class="f_item">
    <%= link_to "　書籍　", new_item_path, class: "btn btn-outline-blue mt-3" %>
  </div>
  <div class="f_item">
    <%= link_to "　電子機器　", new_item_path, class: "btn btn-outline-blue mt-3" %>
  </div>
  <div class="f_item">
    <%= link_to "　その他　", new_item_path, class: "btn btn-outline-blue mt-3" %>
  </div>
  <div class="f_item">
    <%= link_to "　備品の追加　", new_item_path, class: "btn btn_yellow mt-3" %></br>
  </div>
</div>
<br>

<hr>

<div class="item">
  <% @items.each do |item| %>
    <%= link_to item_path(item) do %>
      <!--<= attachment_image_tag item, :image, format: 'jpeg', size: "120x120", fallback: "no-image.png" %>-->
      <%= attachment_image_tag item, :image, class: "img", fallback: "no-image.png", size:"300x250" %>
      <p><%= item.name %></p>
      <p>
        <% if item.status== '貸出可' %>
  				<span class="text-active">貸出可</span>
  			<% else %>
  				<span class="text-invalid">貸出中</span>
  			<% end %>
			</p>
		<% end %>
  <% end %>
</div>

<%= paginate(@items) %>
