<h2 class="page_title col-lg-4 offset-lg-4">備品一覧</h2>
<div class="row">
  <div class="col-lg-10 mx-auto">
    <p>カテゴリ選択</p>
    <div class="d-flex">
        <%= link_to "　書籍　", new_item_path, class: "btn btn-outline-blue mr-2" %>
        <%= link_to "　電子機器　", new_item_path, class: "btn btn-outline-blue mr-2" %>
        <%= link_to "　その他　", new_item_path, class: "btn btn-outline-blue" %>
      <div class="offset-lg-5">
        <%= link_to "　備品の追加　", new_item_path, class: "btn btn_yellow" %>
      </div>
    </div>
  </div>
  <div class="col-lg-10 mx-auto">
  <hr>
    <div class="item_index d-flex flex-wrap">
      <% @items.each do |item| %>
        <div class="col-lg-4">
        <%= link_to item_path(item) do %>
          <%= attachment_image_tag item, :image, class: "img", fallback: "no-image.png", size:"250x200" %>
          <p><%= item.name %></p>
          <p>
            <% if item.status== '貸出可' %>
      				<span class="text-active">貸出可</span>
      			<% else %>
      				<span class="text-invalid">貸出中</span>
      			<% end %>
    			</p>
    		<% end %>
    		</div>
      <% end %>
    </div>
  </div>
</div><!-- /row -->

<%= paginate(@items) %>

