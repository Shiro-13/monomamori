<h2 class="page_title col-lg-4 offset-lg-4">備品一覧</h2>
<div class="row">
  <div class="col-lg-10 mx-auto">
    <p>カテゴリ選択</p>
    <div class="d-flex">
      <% Category.all.each do |category| %>
        <%= link_to category.name, category_items_path(category), class: "btn btn-outline-blue mr-2" %>
      <% end %>
      <% if current_user.role == 'admin' %>
      <div class="offset-lg-6">
        <%= link_to "　備品の追加　", new_item_path, class: "btn btn_yellow" %>
      </div>
      <% end %>
    </div>
  </div>
  <div class="col-lg-10 mx-auto">
  <hr>
  <%= render 'items/item_list', resource: @item %>
  </div>
  <div class="mx-auto">
      <%= paginate(@items) %>
    </div>
</div><!-- /row -->



