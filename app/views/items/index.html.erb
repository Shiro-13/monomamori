<h2>備品一覧</h2>

<%= link_to "備品の追加", new_item_path %><br>

<hr>

<div class="item">
  <% @items.each do |item| %>
    <%= link_to item_path(item) do %>
      <%= attachment_image_tag item, :image, format: 'jpeg', size: "120x120", fallback: "no-image.png" %>
      <p><%= item.name %></p>
      <p>
        <% if item.status? %>
  				<span class="text-active">貸出可</span>
  			<% else %>
  				<span class="text-invalid">貸出中</span>
  			<% end %>
			</p>
		<% end %>
  <% end %>
</div>

<%= paginate(@items) %>
