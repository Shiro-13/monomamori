<section class="inner">
  <h2>備品詳細</h2>
  <div class="flex">
    <div>
      <div class="item_image">
        <%= attachment_image_tag @item, :image, class: "img", fallback: "no-image.png", size:"300x250" %>
      </div>
    </div>
    <table>
      <thead>
        <tr>
          <th></th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <tr>
          <td>名前</td>
          <td><%= @item.name %></td>
        </tr>
        <tr>
          <td>カテゴリ</td>
          <td><%= @item.category.name %></td>
        </tr>
        <tr>
          <td>保管場所</td>
          <td><%= @item.place%></td>
        </tr>
        <tr>
          <td>説明</td>
          <td><%= @item.caption %></td>
        </tr>
        <tr>
          <td>
            <% if @item.status? %>
              <span class="text-active">貸出可</span>
            <% else %>
              <span class="text-active">貸出中</span>
            <% end %>
          </td>
        </tr>
      </tbody>
    </table>
    <div class="flex align-center pl5">
      <%= link_to "編集する", edit_item_path(@item), class: "btn btn-success" %>
    </div>
    <% if @item.status == '貸出中' %>
      <h3>貸出中</h3>
    <% else %>
      <% form_with model: @rental, url: rentals_path, local: true do |f| %>
      <div class="flex align-center pl5">
        <%= f.hidden_field :item_id, value: @item.id %>
        <%= f.submit "借りる", class: "btn btn-primary" %>
      </div>
      <% end %>
    <% end %>
    <div class="flex align-center pl5">
      <%= link_to "削除する", item_path(@item), method: :delete, data: { confirm: "削除してもよろしいですか？" }, class: "btn btn-danger" %>
    </div>
  </div>
</section>