  <div class="d-flex flex-wrap">
      <% @items.each do |item| %>
      <div class="col-lg-3">
        <table class="item_index mt-4">
          <thead>
            <tr>
              <th>
                <%= link_to item_path(item) do %>
                  <%= attachment_image_tag item, :image, class: "img", fallback: "no-image.png" %>
                <% end %>
              </th>
            </tr>
          </thead>
          <tbody>
            <tr>
              <td>
                <%= item.name %><br>
                <% if item.status== '貸出可' %>
          				<span class="badge-info">　貸出可　</span>
          			<% else %>
          				<span class="badge-secondary">　貸出中　</span>
          			<% end %>
          		</td>
            </tr>
          </tbody>
        </table>
    	</div>
      <% end %>
    </div>
    <%= paginate(@items) %>