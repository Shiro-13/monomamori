<h2>備品一覧</h2>

<%= link_to "備品の追加", new_equipment_path %><br>

<hr>

<div class="equipment">
  <% @equipment.each do |equipment| %>
    <%= link_to equipment_path(equipment) do %>
      <%= attachment_image_tag equipment, :image ,format: "jpeg", fallback: "no-image.png" %>
      <p><% equipment.name %></p>
      <p>
        <% if equipment.is_returned? %>
  				<span class="text-active">貸出可</span>
  			<% else %>
  				<span class="text-invalid">貸出中</span>
  			<% end %>
			</p>
		<% end %>
  <% end %>
</div>

<%= paginate(@equipment) %>
