<h2 class="page_title col-lg-4 offset-lg-4">新規利用者登録</h2>
<%= render 'layouts/error_messages', resource: @user %>
<div class="row">
  <div class="col-lg-6 offset-lg-3 mx-auto">
    <%= form_with model: @user, url: user_registration_path, id: 'new_user', class: 'new_user', local: true do |f| %>
      <div class="form-group">
    	  <%= f.label :role, "管理者権限を選択する" %><br />
        <%= f.radio_button :role, 'menber' %>
        <%= f.label :"一般ユーザー" %>&emsp;
        <%= f.radio_button :role, 'admin' %>
        <%= f.label :"管理者" %>
      </div>
      <div class="form-group">
        <%= f.label :name, "名前" %>
        <%= f.text_field :name, autofocus: true, class:"form-control", id:"inputName" %>
      </div>
      <div class="form-group">
        <%= f.label :department, "所属部署" %>
        <%= f.text_field :department, autofocus: true, class:"form-control", id:"inputDepartment" %>
      </div>
      <div class="form-group">
        <%= f.label :email, "メールアドレス" %>
        <%= f.email_field :email, class:"form-control", id:"inputEmail" %>
      </div>
      <div class="form-group">
        <%= f.label :password, "パスワード（6文字以上）" %>
        <%= f.password_field :password, autocomplete: "off", class:"form-control", id:"inputPassword" %>
      </div>
      <div class="form-group">
        <%= f.label :password_confirmation, "パスワード確認" %>
        <%= f.password_field :password_confirmation, autocomplete: "off", class:"form-control", id:"inputConfirmPassword" %>
      </div>
    	<div class="form-group">
        <%= f.submit "新規登録", class:"btn btn_yellow btn-block" %>
       </div>
    <% end %>
    <%= render "devise/shared/links" %>
  </div>
</div>