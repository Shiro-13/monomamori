<h2>登録情報編集</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="form-group has-icon">
    <%= f.radio_button :role, 'menber' %>
      <%= f.label :"一般ユーザー" %>&emsp;
    <%= f.radio_button :role, 'admin' %>
    <%= f.label :"管理者" %>
  </div>
  <div class="form-group has-icon">
    <label class="control-label sr-only" for="inputName">Name</label>
    <%= f.text_field :name, autofocus: true, class:"form-control", id:"inputName", placeholder:"名前" %>
    <span class="fa fa-user form-control-icon" aria-hidden="true"></span>
  </div>
  <div class="form-group has-icon">
    <label class="control-label sr-only" for="inputDepartment">Department</label>
    <%= f.text_field :department, autofocus: true, class:"form-control", id:"inputDepartment", placeholder:"所属部署" %>
    <span class="fas fa-clipboard form-control-icon" aria-hidden="t"></span>
  </div>
  <div class="form-group has-icon">
    <label class="control-label sr-only" for="inputEmail">Email</label>
    <%= f.email_field :email, class:"form-control", id:"inputEmail", placeholder:"メールアドレス"%>
    <span class="fa fa-envelope form-control-icon" aria-hidden="true"></span>
  </div>
  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>
    <div class="password-field">
      <%= f.label :現在のパスワード %><br />
      <%= f.password_field :current_password, autocomplete: "current-password" %>
    </div>
    <div class="password-field">
      <%= f.label :新しいパスワード %> <br />
      <%= f.password_field :password, autocomplete: "new-password" %>
  <% if @minimum_password_length %>
    <br />
  <% end %>
    </div>
    <div class="password-field">
      <%= f.label :新しいパスワードの確認 %><br />
      <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
    </div>

  <div class="actions">
    <%= f.submit "編集内容を保存する" %>
  </div>
<% end %>


<%= link_to "Back", :back %>
