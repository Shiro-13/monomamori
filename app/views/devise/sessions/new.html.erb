<h2 class="page_title col-lg-4 offset-lg-4">ログイン</h2>
<%= render 'layouts/error_messages', resource: @user %>

  <div class="row">
    <div class="col-lg-6 offset-lg-3 mx-auto">
      <p>メールアドレスとパスワードを入力してください。</p>
      <%= form_with model: @user, url: session_path(resource_name), local: true do |f| %>
      <div class="form-group has-icon">
        <%= f.label :email, "メールアドレス" %>
        <%= f.email_field :email, autofocus: true, class:"form-control", id:"inputEmail" %>
      </div>
      <div class="form-group">
        <%= f.label :password, "パスワード" %>
        <%= f.password_field :password, autocomplete: "off", class:"form-control", id:"inputPassword" %>
      </div>
      <div class="form-group">
        <%= f.submit "サインイン", class:"btn btn_yellow btn-block" %>
      </div>
      <% if devise_mapping.rememberable? %>
        <div class="field">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me %>
        </div>
      <% end %>
    <% end %>
    <%= render "devise/shared/links" %>
  </div>
</div>
