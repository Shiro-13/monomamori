<h2>登録情報変更</h2>

	<!-- エラーメッセージ表示-->
	<% if @user.errors.any? %>
		<div id="error_explanation">
			<h3><%= @user.errors.count %>error prohibited this obj from being saved:</h3>
			<ul>
				<% @user.errors.full_messages.each do |message| %>
				<li><%= message %></li>
				<% end %>
			</ul>
		</div>
	<% end %>
	<!-- エラーメッセージ表示-->
	
	<%= form_with model:@user, url: user_path(@user), method: :patch, local: true do |f| %>

	<div class="form-group has-icon">
    <%= f.radio_button :admin, "一般ユーザー" %>
    <%= f.label :"一般ユーザー" %>&emsp;
    <%= f.radio_button :admin, "管理者" %>
    <%= f.label :"管理者" %>
  </div>
  <div class="form-group has-icon">
    <label class="control-label sr-only" for="inputName">Name</label>
    <%= f.text_field :name, autofocus: true, class:"form-control", id:"inputName", placeholder:"名前" %>
    <span class="fa fa-user form-control-icon" aria-hidden="true"></span>
  </div>
  <div class="form-group has-icon">
    <label class="control-label sr-only" for="inputDepartment">Department</label>
    <%= f.text_field :department, autofocus: true, class:"form-control", id:"inputDepartment", placeholder:"所属部署" %>
    <span class="fas fa-clipboard form-control-icon" aria-hidden="t"></span>
  </div>
  <div class="form-group has-icon">
    <label class="control-label sr-only" for="inputEmail">Email</label>
    <%= f.email_field :email, class:"form-control", id:"inputEmail", placeholder:"メールアドレス"%>
    <span class="fa fa-envelope form-control-icon" aria-hidden="true"></span>
  </div>
  <%= f.hidden_field :id %>
	<div class="actions">
    <%= f.submit "編集内容を保存する" %>
  </div>

<% end %>

<%= link_to "Back", :back %>
